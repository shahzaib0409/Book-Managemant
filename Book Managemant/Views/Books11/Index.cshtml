@model IEnumerable<Book_Managemant.Models.Books1>



<div class="  bg-black  bg-opacity-50">
    <table class="table text-white text-center align-items-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishedYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher.PublisherName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishedYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookID }, new { @class = "btn3 text-white " })  |
                    @Html.ActionLink("Details", "Details", new { id = item.BookID }, new { @class = "btn4 text-white " }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookID }, new { @class = "btn5 text-white " })
                </td>
            </tr>
        }

    </table>
