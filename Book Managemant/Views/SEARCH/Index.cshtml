@model Book_Managemant.Models.SearchViewModel


<h2>Search Books</h2>

<div class="  text-white bg-black  bg-opacity-50">
    <form method="post" action="@Url.Action("SearchResults", "SEARCH")">
        <div class="form-group text-white table-striped border-1">
            <label for="searchQuery">Search by Book ID:</label>
            <input type="text" class="form-control" id="searchQuery" name="searchQuery" />
            <br />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>

    </form>

    @if (Model != null && Model.SearchResults != null && Model.SearchResults.Any())
    {
        <h3>Search Results:</h3>
        <table>

            <tr>
                <th>
                    BookID  &nbsp;   &nbsp; &nbsp;  &nbsp;
                </th>

                <th>
                    Title &nbsp;   &nbsp; &nbsp;  &nbsp;
                </th>

                <th>
                    ISBN    &nbsp;   &nbsp; &nbsp; &nbsp;
                </th>
                <th>
                    Author Name   &nbsp;   &nbsp;&nbsp;&nbsp;
                </th>
                <th>
                    Category   &nbsp;   &nbsp;&nbsp; &nbsp;
                </th>
                <th>
                    Publisher   &nbsp;   &nbsp;&nbsp;&nbsp;
                </th>
                <th>
                    PublishedYear   &nbsp;   &nbsp; &nbsp; &nbsp;
                </th>
            </tr>


            @foreach (var item in Model.SearchResults)
            {
                <tr>
                    <td>@item.BookID</td>
                    <td>@item.Title</td>
                    <td>@item.ISBN</td>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.PublisherName</td>
                    <td>@item.PublishedYear</td>





                </tr>
            }

        </table>

    }

    else
    {
        <p class="text-white fw-bold">No results found for "@Model.SearchQuery".</p>
    }
</div>