<!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <link href="@Url.Content("/Content/StyleSheet1.css")" rel="stylesheet" />
    </head>
    <body>
        <div class="home1">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark bg-opacity-50 ">
                <div class="container">
                    @Html.ActionLink("Book Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav mb-2 text-black fw-bold  ms-auto mb-lg-0">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link text-white" })</li>

                            <li>@Html.ActionLink("Author", "Index", "Authors", new { area = "" }, new { @class = "nav-link text-white" })</li>
                            <li>@Html.ActionLink("Category", "Index", "Categories1", new { area = "" }, new { @class = "nav-link text-white" })</li>

                            <li>@Html.ActionLink("Publisher", "Index", "Publishers", new { area = "" }, new { @class = "nav-link text-white" })</li>

                            <li>@Html.ActionLink("Books", "Index", "Books11", new { area = "" }, new { @class = "nav-link text-white" })</li>
                            @*<li>@Html.ActionLink("Search", "Index", "Searches", new { area = "" }, new { @class = "nav-link text-white" })</li>*@
                            <li>@Html.ActionLink("Search_rec", "Index", "SEARCH", new { area = "" }, new { @class = "nav-link text-white" })</li>

                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                </footer>
            </div>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>

    </body>
</html>
        

        









